<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome_at_log_in"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="@string/welcome_at_log_in"
        android:gravity="center"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_at_log_in"
        android:layout_alignStart="@+id/welcome_at_log_in"
        android:layout_alignLeft="@+id/welcome_at_log_in"
        android:layout_alignEnd="@+id/welcome_at_log_in"
        android:layout_alignRight="@+id/welcome_at_log_in"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:hint="@string/email"
        android:inputType="textWebEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_restore_acc"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_marginStart="214dp"
        android:layout_marginLeft="214dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="@string/btn_restore_acc" />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="212dp"
        android:layout_height="56dp"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="@string/forget_password"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_below="@+id/forget_password"
        android:layout_alignStart="@+id/forget_password"
        android:layout_alignLeft="@+id/forget_password"
        android:layout_alignEnd="@+id/btn_restore_acc"
        android:layout_alignRight="@+id/btn_restore_acc"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="@string/btn_registration" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="209dp"
        android:layout_height="47dp"
        android:layout_below="@+id/forget_password"
        android:layout_alignStart="@+id/forget_password"
        android:layout_alignLeft="@+id/forget_password"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="33dp"
        android:gravity="left"
        android:text="@string/registration"
        android:textSize="18sp" />
</RelativeLayout>